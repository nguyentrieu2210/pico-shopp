<%-include("../layout/head", {title:"Edit-category"})%>
<%-include("../layout/header")%>
<%-include("../layout/sidebar")%>
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/admin/dashboard"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li><a href="/admin/categories">Quản lý danh mục</a></li>
				<li class="active"><%=category.title%></li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Danh mục:<%=category.title%></h1>
			</div>
		</div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-8">
                            <% if(data.error){ %>
                                <div class="alert alert-danger"><%=data.error%></div>
                            <% } %>
                        <form role="form" method="post" action="/admin/categories/update<%=category._id%>">
                            <div class="form-group">
                                <label>Tên danh mục:</label>
                                <input type="text" name="title" required value="<%=category.title%>" class="form-control" placeholder="Tên danh mục...">
                            </div>
                            <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div><!-- /.col-->
	</div>	<!--/.main-->	
	<%-include("../layout/footer")%>
