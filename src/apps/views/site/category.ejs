<%-include("./layout/head", {title:category.title})%>
    <%-include("./layout/header")%>
    <div id="search-page">
        <div class="container">
            <div id="global-search">
                <a href="/">Trang chủ</a> / <a href="/category-<%=category.slug%>.<%=category._id%>"> <b><%=category.title%></b></a>
            </div>
            <!-- Banner Bottom  -->
            <div id="banner-bottom" class="row">
                <div class="banner-bottom-item banner-hover col-lg-4 col-md-4 col-sm-12">
                    <a href="/"><img class="img-fluid" src="./images/banner_right_6.png" alt=""></a>
                </div>
                <div class="banner-bottom-item banner-hover col-lg-4 col-md-4 col-sm-12">
                    <a href="/"><img class="img-fluid" src="./images/banner_right_4.png" alt=""></a>
                </div>
                <div class="banner-bottom-item banner-hover col-lg-4 col-md-4 col-sm-12">
                    <a href="/"><img class="img-fluid" src="./images/banner_right_5.png" alt=""></a>
                </div>
            </div>
            <!-- End Banner Bottom  -->
            <!-- =================================< Category >============================ -->
            <div class="row">
                <div id="search-page-l" class="col-lg-9 col-md-9 col-sm-12 mx-auto">
                    <%-include("./layout/search_list", {products, total_product})%>
                    <% if(products.length < total_product) { %>
                        <div id="box-show-more"><a class="show-more" href="/category-<%=category.slug%>.<%=category._id%>?number=<%=products.length+limit%>">Xem thêm (còn <%= total_product - products.length %> sản phẩm)</a></div>
                    <% } else { %>
                        <div id="box-show-end"><span class="show-end">Hết sản phẩm !</span></div>
                    <% } %>
                </div>
                <div id="search-page-r" class="col-lg-3 col-md-3 col-sm-12 mx-auto">
                    <h3>GIÁ BÁN</h3>
                    <div id="filter-list">
                        <a href="/search-filter-<%=category.slug%>.<%=category._id%>?price=<1"><span class="icon-square"></span><span>Dưới 1 triệu</span></a>
                        <a href="/search-filter-<%=category.slug%>.<%=category._id%>?price=1-10"><span class="icon-square"></span><span>1 triệu - 10
                            triệu</span></a>
                        <a href="/search-filter-<%=category.slug%>.<%=category._id%>?price=10-20"><span class="icon-square"></span><span>10 triệu - 20
                                triệu</span></a>
                        <a href="/search-filter-<%=category.slug%>.<%=category._id%>?price=20-40"><span class="icon-square"></span><span>20 triệu - 40
                                triệu</span></a>
                        <a href="/search-filter-<%=category.slug%>.<%=category._id%>?price=>40"><span class="icon-square"></span><span>Trên 40 triệu</span></a>
                    </div>
                </div>
            </div>
            <!-- =================================< End Category >========================= -->
        </div>
    </div>
    <%-include("./layout/footer")%>